version(1);

project_name = "Image Viewer (D3D11)";

patterns =
{
"*.c",
"*.cpp",
"*.h",
"*.inl",
"*.m",
"*.bat",
"*.sh",
"*.4coder",
"*.hlsl",
};

blacklist_patterns = { ".*" };

load_paths_base = { { ".", .relative = true, .recursive = true, } };

load_paths = { { load_paths_base, .os = "win", } };

command_list =
{
 { .name = "build",
   .out = "*compilation*", .footer_panel = true, .save_dirty_files = true,
   .cmd = { { "build.bat" , .os = "win" } } },
 { .name = "run",
   .out = "*run*", .footer_panel = false, .save_dirty_files = false,
   .cmd = { { "run bin/debug/ImageViewer.exe", .os = "win" } } },
 { .name = "debug",
   .out = "*compilation*", .footer_panel = true, .save_dirty_files = true,
   .cmd = { { "debug.bat" , .os = "win" } } },
};

fkey_command[1] = "build";
fkey_command[2] = "run";
fkey_command[3] = "debug";
